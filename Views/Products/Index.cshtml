@model List<Product>

<h1>Listes des produits</h1>

<a class="nav-link" asp-area="" asp-controller="Products" asp-action="Create">Ajouter</a>

<table style="width: 100%; border-collapse: collapse; text-align: left; font-family: Arial, sans-serif;">
    <thead>
        <tr style="background-color: #f2f2f2; border-bottom: 2px solid #ddd;">
            <th style="padding: 10px; border: 1px solid #ddd;">Id</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Nom</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Prix</th>
            <th style="padding: 10px; border: 1px solid #ddd;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px; border: 1px solid #ddd;">@product.Id</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@product.Name</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@product.Price</td>
                <td>
                    <div style="display: flex">
                    <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id">Detail</a> | <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Supprimer</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
