@model Product

<h1>Modification du produit : @Model.Name</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">

        <div class="form-group">
            <label for="Name" class="form-label">Nom :</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-error" })
        </div>

        <div class="form-group">
            <label for="Price" class="form-label">Prix :</label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "form-error" })
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Modifier</button>
        </div>
    </div>
}